@model _3NetEventManagerS.Models.Event

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<fieldset>
    <legend>Event</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Address</div>
    <div class="display-field">@Model.Address</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">Date</div>
    <div class="display-field">@String.Format("{0:d}", Model.Date)</div>

    <div class="display-label">Time</div>
    <div class="display-field">@Model.Time</div>

    <div class="display-label">GuestsList</div>
    <div class="display-field">@(Model.GuestsList == null ? "None" : Model.GuestsList.Count.ToString())</div>

    <div class="display-label">CreatorId</div>
    <div class="display-field">@Model.CreatorId</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.EventId })
</p>