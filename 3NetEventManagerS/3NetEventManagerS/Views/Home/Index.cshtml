@model _3NetEventManagerS.Models.User

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div>
        <fieldset>
            <legend>Login</legend>
            <div class="editor-label">
                @Html.LabelFor(u => u.NickName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.NickName, new { required = "required" })
                @Html.ValidationMessageFor(u => u.NickName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(u => u.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(u => u.Password, new { required = "required" })
                @Html.ValidationMessageFor(u => u.Password)
            </div>
            <input type="submit" value="Log In"/>
        </fieldset>
    </div>
}