@model _3NetEventManagerS.Models.User

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div>
        <fieldset>
            <legend>Register</legend>
            <div class="editor-label">
                @Html.LabelFor(u => u.NickName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.NickName, new { required = "required" })
                @Html.ValidationMessageFor(u => u.NickName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(u => u.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(u => u.Password, new { required = "required" })
                @Html.ValidationMessageFor(u => u.Password)
            </div>
            <div class="editor-label">
                @Html.LabelFor(u => u.FirstName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.FirstName, new { required = "required" })
                @Html.ValidationMessageFor(u => u.FirstName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(u => u.LastName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.LastName, new { required = "required" })
                @Html.ValidationMessageFor(u => u.LastName)
            </div>
            <input type="submit" value="Register"/>
        </fieldset>
    </div>
}